{
  "name": "nodejs-blog-api",
  "version": "1.0.0",
  "description": "NodeJS Blog API.",
  "scripts": {
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "node ./node_modules/tslint/bin/tslint 'src/**/*.ts'",
    "lint-fix": "node ./node_modules/tslint/bin/tslint 'src/**/*.ts' --fix",
    "prettier": "prettier --config .prettierrc.json --parser typescript --write \"./src/**/*.ts\";",
    "before-commit": "yarn prettier && yarn lint"
  },
  "license": "ISC",
  "dependencies": {
    "awilix": "^3.0.7",
    "awilix-express": "^1.0.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.3",
    "express": "^4.16.2",
    "http-status": "^1.0.1",
    "joi": "^13.1.2",
    "lodash": "^4.17.4",
    "log4js": "^1.1.1",
    "log4js-json-layout": "^1.0.5",
    "mongodb": "^3.1.13",
    "mongoose": "^4.13.6",
    "mongoose-timestamp": "^0.6.0",
    "mongoose-type-email": "^1.0.5",
    "nconf": "^0.8.4"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/http-status": "^0.2.30",
    "@types/jest": "^22.2.3",
    "@types/joi": "^13.0.8",
    "@types/lodash": "^4.14.108",
    "@types/mongodb": "^3.0.18",
    "@types/mongoose": "^5.0.13",
    "@types/morgan": "^1.7.35",
    "@types/nconf": "^0.0.37",
    "@types/node": "^10.0.6",
    "concurrently": "^3.5.1",
    "cucumber": "^4.2.1",
    "cucumber-html-reporter": "^4.0.2",
    "dotenv": "^4.0.0",
    "jest": "^22.4.3",
    "morgan": "^1.8.1",
    "nodemon": "^1.17.4",
    "prettier": "^1.12.1",
    "puppeteer": "^1.3.0",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.3",
    "tsc-watch": "^1.0.21",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
